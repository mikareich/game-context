{
  "name": "space-defender",
  "version": "1.0.0",
  "description": "A small game, programmed in typescript. The goal of the game is to shoot down as many spaceships as possible with your spaceship and not get hit yourself.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "repository": "https://github.com/mikareich/space-defender.git",
  "author": "Mika Reich <mikareich0@gmail.com>",
  "license": "MIT",
  "files": [
    "/lib/**/*"
  ],
  "scripts": {
    "dev": "parcel src/index.html",
    "build": "tsc",
    "lint": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "jest",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "dependencies": {
    "@types/uuid": "^8.3.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@typescript-eslint/eslint-plugin": "^4.15.2",
    "@typescript-eslint/parser": "^4.15.2",
    "eslint": "^7.21.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-ettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.5",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.3",
    "typescript": "^4.2.3"
  }
}
